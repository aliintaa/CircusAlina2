<Page x:Class="CircusAlina.Pages.RegistrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" Height="600" Width="200"
      Title="RegistrationPage">

    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Регистрация" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

            <TextBlock Text="Имя" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBox x:Name="FirstNameTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Фамилия" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBox x:Name="LastNameTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Роль" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBox x:Name="RoleTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Логин" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBox x:Name="UsernameTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Пароль" FontWeight="Bold" Margin="0,0,0,10"/>
            <PasswordBox x:Name="PasswordBox" Margin="0,0,0,10"/>

            <TextBlock Text="Повторите пароль" FontWeight="Bold" Margin="0,0,0,10"/>
            <PasswordBox x:Name="ConfirmPasswordBox" Margin="0,0,0,20"/>

            <Button Content="Зарегистрироваться" Click="RegisterButton_Click" Margin="5" 
                        Width="150" Height="35" Background="#4CAF50" 
                        Foreground="White" FontWeight="Bold"/>

           
        </StackPanel>
    </Grid>
</Page>