<Window x:Class="CircusAlina.Pages.ShowEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование шоу" Height="350" Width="400"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Название:" Grid.Row="0"/>
        <TextBox x:Name="TitleTextBox" Grid.Row="1" Height="30" Margin="0,5" />

        <TextBlock Text="Дата (ГГГГ-ММ-ДД):" Grid.Row="2" Margin="0,10,0,0"/>
        <TextBox x:Name="DateTextBox" Grid.Row="3" Height="30" Margin="0,5"/>

        <TextBlock Text="Время (ЧЧ:ММ):" Grid.Row="4" Margin="0,10,0,0"/>
        <TextBox x:Name="TimeTextBox" Grid.Row="5" Height="30" Margin="0,5"/>

        <TextBlock Text="Местоположение:" Grid.Row="6" Margin="0,10,0,0"/>
        <TextBox x:Name="LocationTextBox" Grid.Row="7" Height="30" Margin="0,5"/>

        <StackPanel Orientation="Horizontal" Grid.Row="8" Margin="0,15,0,0" HorizontalAlignment="Right">
            <Button Content="Отмена" Click="Cancel_Click" Width="80" Margin="5"/>
            <Button Content="Сохранить" Click="Save_Click" Width="100" Margin="5" Background="#4CAF50" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>
